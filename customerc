#!/bin/bash

###通用脚本,Linux MacOS通用
#!/bin/bash

#Add myscript path to PATH
export PATH="${PATH}:/usr/local/scripts"

#export ALL_PROXY=socks5://127.0.0.1:1086

alias cls='clear'
alias ll='ls -l'
alias la='ls -a'
alias lal='ls -al'
alias grep='grep --color=auto'

#Colorful for Terminal
# 不加判断,加快执行速度

alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias grep='dir --color=auto'

alias grep='grep --color'
alias egrep='egrep --color'
alias fgrep='fgrep --color'

eval $(dircolors ~/opensource/dircolors-solarized/dircolors.ansi-dark)

alias ping="ping -c 5"
alias tree="tree -N"

#alias for cnpm
alias cnpm="npm --registry=https://registry.npm.taobao.org \
  --cache=$HOME/.npm/.cache/cnpm \
  --disturl=https://npm.taobao.org/dist \
  --userconfig=$HOME/.cnpmrc"

export PYSPARK_DRIVER_PYTHON=jupyter
export PYSPARK_DRIVER_PYTHON_OPTS='notebook'

##Linux版本
screenfetch

export JAVA_HOME=/opt/jdk/default
export CLASSPATH=.:$JAVA_HOME/lib
export PATH=$PATH:$JAVA_HOME/bin

export SPARK_HOME=/opt/spark/default
export PATH=$PATH:$SPARK_HOME/bin

# added by Anaconda3 2018.12 installer
# >>> conda init >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$(CONDA_REPORT_ERRORS=false '/opt/anaconda3/bin/conda' shell.bash hook 2> /dev/null)"
if [ $? -eq 0 ]; then
    \eval "$__conda_setup"
else
    if [ -f "/opt/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/opt/anaconda3/etc/profile.d/conda.sh"
        CONDA_CHANGEPS1=false conda activate base
    else
        \export PATH="/opt/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda init <<< 
