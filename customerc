#!/bin/bash

###通用脚本,Linux MacOS通用
#!/bin/bash

#Add myscript path to PATH
export PATH="${PATH}:/usr/local/scripts"

#export ALL_PROXY=socks5://127.0.0.1:1086

alias cls='clear'
alias ll='ls -l'
alias la='ls -a'
alias lal='ls -al'
alias grep='grep --color=auto'

#Colorful for Terminal
# 不加判断,加快执行速度

alias ls='gls --color=auto'
alias dir='gdir --color=auto'
alias grep='gdir --color=auto'

alias grep='grep --color'
alias egrep='egrep --color'
alias fgrep='fgrep --color'

eval $(gdircolors ~/opensource/dircolors-solarized/dircolors.ansi-dark)

alias ping="ping -c 5"
alias tree="tree -N"

#alias for cnpm
alias cnpm="npm --registry=https://registry.npm.taobao.org \
  --cache=$HOME/.npm/.cache/cnpm \
  --disturl=https://npm.taobao.org/dist \
  --userconfig=$HOME/.cnpmrc"

#MacOS专用脚本
#Setting for Java
export JAVA_8_HOME=`/usr/libexec/java_home -v 1.8`
export JAVA_11_HOME="/Library/Java/JavaVirtualMachines/jdk-11.0.7.jdk/Contents/Home"
export JAVA_14_HOME=`/usr/libexec/java_home -v 14`
export GRAALVM_HOME="/Library/Java/JavaVirtualMachines/graalvm-ce-java11-20.3.0/Contents/Home"
export OPENJDK_HOME="/Library/Java/JavaVirtualMachines/openjdk.jdk/Contents/Home"

export JAVA_HOME=$JAVA_14_HOME
alias jdk8="export JAVA_HOME=${JAVA_8_HOME}"
alias jdk11="export JAVA_HOME=${JAVA_11_HOME}"
alias jdk14="export JAVA_HOME=${JAVA_14_HOME}"
alias graalvm="export JAVA_HOME=${GRAALVM_HOME}"
alias openjdk="export JAVA_HOME=${OPENJDK_HOME}"

export QT_HOME="/Users/chenlong/Qt5.9.1/5.9.1/clang_64"
export PATH="${QT_HOME}/bin:${PATH}"

export PATH=$PATH:/usr/local/sbin
[[ -s ~/.autojump/etc/profile.d/autojump.sh ]] && . ~/.autojump/etc/profile.d/autojump.sh
export BXSHARE=/usr/local/Cellar/bochs/2.6.9_2/share/bochs

export PUB_HOSTED_URL=https://pub.flutter-io.cn
export FLUTTER_STORAGE_BASE_URL=https://storage.flutter-io.cn
export FLUTTER_HOME=/opt/flutter
export PATH=$PATH:$FLUTTER_HOME/bin

temp(){
  cd `mktemp -d`
 }

export HOMEBREW_BOTTLE_DOMAIN=https://mirrors.aliyun.com/homebrew/homebrew-bottles

